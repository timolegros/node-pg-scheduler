{
  "name": "crypto_aggregator",
  "private": "true",
  "version": "0.0.1",
  "main": "./src/index.ts",
  "repository": "https://github.com/timolegros/CryptoAggregator.git",
  "author": "Timothee Legros <timothee@ualberta.ca>",
  "scripts": {
    "build": "tsc -P tsconfig.json",
    "check-types": "tsc --noEmit -P tsconfig.json",
    "lint-new": "./scripts/lint-new-work.sh",
    "lint-branch": "./scripts/lint-branch.sh",
    "lint-all": "eslint './src/**/*.ts'",
    "format": "prettier --write .",
    "add-prettier-precommit": "grep -q -s 'prettier --write' ./.git/hooks/pre-commit || cat ./scripts/prettier-new-work.sh >> ./.git/hooks/pre-commit",
    "test": "NODE_OPTIONS='--import tsx' NODE_ENV=test nyc npx mocha -require source-map-support/register --recursive './tests/**/*.spec.ts' --exit"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "sourceMap": true,
    "produceSourceMap": true,
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/coverage",
      "**/.nyc_output",
      "**/.prettierrc.js",
      "**/tests"
    ],
    "reporter": [
      "lcov",
      "html"
    ],
    "all": true
  },
  "license": "UNLICENSED",
  "devDependencies": {
    "@eslint/js": "^9.2.0",
    "@types/chai": "^4.3.6",
    "@types/chai-as-promised": "^7.1.6",
    "@types/mocha": "^10.0.1",
    "@types/node": "^14.11.2",
    "@types/pg": "^8.10.2",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "chai": "^4.3.8",
    "chai-as-promised": "^7.1.1",
    "eslint": "^9.2.0",
    "globals": "^15.1.0",
    "nyc": "^15.1.0",
    "prettier": "^3.2.5",
    "sinon": "^17.0.1",
    "source-map-support": "^0.5.21",
    "ts-mocha": "^10.0.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.8.0"
  },
  "dependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "eslint-config-prettier": "^9.1.0",
    "mocha": "^10.4.0",
    "pg": "^8.11.3",
    "pino": "^9.0.0",
    "pino-pretty": "^11.0.0",
    "tsx": "^4.9.2"
  }
}
